<style>
  .pub-container {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin-bottom: 30px;
    flex-direction: row;
  }

  .pub-image-box {
    width: 350px;
    height: 200px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    border: 1px solid #ddd;
    flex-shrink: 0;
  }

  .pub-divider {
    width: 1px;
    background-color: #ccc;
  }

  .pub-text {
    flex-grow: 1;
    min-width: 0;
  }

  @media (max-width: 767px) {
    .pub-container {
      flex-direction: column;
    }

    .pub-image-box {
      width: 100%;
      height: auto;
    }

    .pub-divider {
      display: none;
    }
  }
</style>

<div class="pub-container">

  {% if include.image %}
    <div class="pub-image-box">
      <img src="{{ site.baseurl }}{{ include.image }}" alt="Image for {{ include.title }}" style="width: 100%; height: 100%; object-fit: cover;">
    </div>

    <div class="pub-divider"></div>
  {% endif %}

  <div class="pub-text">
    <h4 style="margin-top: 0;">{{ include.title }}</h4>

    {% if include.coauthors %}
      <p style="margin-top: -10px; font-size: 0.9em; color: #555;">
        <em>with {{ include.coauthors }}</em>
      </p>
    {% endif %}

    <div style="margin-bottom: 10px;">
      {% if include.pdf_link %}
        <a href="{{ site.baseurl }}{{ include.pdf_link }}" target="_blank" 
          style="display:inline-block; background-color:#fdf1dc !important; color:#5a3e1b !important; padding:4px 10px; margin-bottom:4px; border-radius:6px; font-size:0.85em; text-decoration:none; border:1px solid #e0b97f;">
          PDF
        </a>
      {% endif %}
      {% if include.url_link %}
        <a href="{{ include.url_link }}" target="_blank" 
          style="display:inline-block; background-color:#e1f0ff !important; color:#2a4b6a !important; padding:4px 10px; margin-bottom:4px; border-radius:6px; font-size:0.85em; text-decoration:none; border:1px solid #99c;">
          Link
        </a>
      {% endif %}
    </div>

    {% if include.abstract %}
      <details style="margin-top: 5px;">
        <summary style="cursor:pointer; background-color:#d4f1d4; color:#333; padding:4px 10px; border-radius:6px; font-size:0.85em; border:1px solid #99c; display: inline-block;">
            Abstract
        </summary>
        <div style="margin-top: 8px; padding: 8px 0;">
          <p style="margin: 0;">{{ include.abstract }}</p>
        </div>
      </details>
    {% endif %}
  </div>
</div>
